{
  "compilerOptions": {
    "module": "commonjs",

    //所有严格的中开关
    "strict": true,

    "removeComments": true,
    "noEmitOnError": true,
    "target": "es5",
    //用来设置文件是否使用严格模式，默认false
    "alwaysStrict": true,
    //不允许any 隐式问题
    "noImplicitAny": true,
    //不允许不明确类型的this
    "noImplicitThis": true,
    //严格检查空值
    "strictNullChecks": true,
    "sourceMap": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
}
